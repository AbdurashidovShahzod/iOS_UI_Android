    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F1F7"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:text="Ios switch for android developer"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/dialog_container"
        app:layout_constraintRight_toRightOf="@id/dialog_container"
        app:layout_constraintBottom_toTopOf="@id/dialog_container"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_pro_display"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/dialog_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/shape_card"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


            <uz.shahzod.unzosoft.iosui_android.ui.iosSwitch.IosSwitch
                android:id="@+id/ios_switch"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:text="Ios Switch" />

    </LinearLayout>

